# Use minimal Python image
FROM python:3.9-alpine

# Install only what we need
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev

# Install lightweight translation library
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    googletrans==4.0.0rc1

# Create app directory
WORKDIR /app

# Create simple translation API
COPY translate_api.py .

# Expose port
EXPOSE 8080

# Run the lightweight API
CMD ["python", "translate_api.py"]
